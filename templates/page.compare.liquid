<div class="container">
  <div class="row">
    <div class="dt-sc-column">
      <form action="#" class="dT_CompareListGrid" id="dT_CompareListGrid">
        <div class="cart_empty_msg" v-if="isNoRecords">
          <img src="{{ "empty-cart.png" | asset_url }}" alt="{{ 'cart.general.empty' | t }}" width="371" height="372" loading="lazy"/>
          <h4>{{ 'products.compare.no_records' | t }}</h4>
          <p><a href="{{ routes.all_products_collection_url }}" class='dt-sc-btn'>{{ 'products.compare.continue' | t }}</a></p>
        </div>
        <div v-else>
          <table>
            <tr>
              <template v-for="(item, i) in compareListRecords">	
                <td :class="'product-thumbnail record-'+item.product_handle">
                  <div class="compare_img">
                    <a :href="item.product_url">
                      <img :src="item.product_image" alt="" loading="lazy">
                    </a>
                    <p :class="'record-'+item.product_handle">
                      <a href="javascript:void(0);" class=" dt-sc-btn close-icon" :data-product_handle="item.product_handle" v-on:click="remove(item.product_handle)"></a>
                    </p>
                  </div>
                  <h4  class="compare_title"><a :href="item.product_url">${ item.product_title }</a></h4>
                  <div class="amount" v-html="item.money_price">${ item.money_price }</div>

                  <div class="addtocart_btn">
                    {% comment %}<a href="#" class="dt-sc-btn dT_QuickAddToCartBtn" :data-product-varient-id="item.variant_id">{{ 'products.product.add_to_cart' | t }}</a>{% endcomment %}
                    <a :href="item.product_url" class="dt-sc-btn" :data-product-varient-id="item.variant_id">{{ 'products.product.select_options' | t }}</a>
                  </div>

                </td>			
              </template>		
            </tr>
          </table>
        </div>  
      </form>
    </div>
  </div>
</div>
<style>
  
  .dT_CompareListGrid table th{font-weight:600;}
  .dT_CompareListGrid table td, .dT_CompareListGrid table th { border: none; background: var(--DTTertiaryColor); vertical-align: top; border-radius: var(--DTRadius);}
  .dT_CompareListGrid table td > *:not(:last-child) {  padding-bottom: 10px;}
  .dT_CompareListGrid table .dt-sc-btn{ margin: 0; display:inline-block;}
  .product-thumbnail{ position:relative; }
  .product-thumbnail .close-icon { position:absolute; right:2.5rem; top:2.5rem; line-height:0;}
  .dT_CompareListGrid table .compare_img { margin-bottom: 1.35rem; padding-bottom: 0 !important; }
  .dT_CompareListGrid table .compare_img img{ width:100%; border-radius: var(--DTRadius);}
  .dT_CompareListGrid table td .amount { margin: 0; font-size: var(--DTFontSize_H6); line-height: normal; }
  .dT_CompareListGrid table td .compare_title { margin:0; font-family: var(--DTFontTypo_Body); }
  .dT_CompareListGrid table td .addtocart_btn { margin-top: .5rem; }
  
  
  .dT_CompareListGrid table tr{ display: grid; grid-template-columns: repeat(auto-fill,minmax(300px,1fr));  gap: var(--DTGutter_Width);}
  
  @media (max-width:576px) {
    
    .dT_CompareListGrid table tr { grid-template-columns: repeat(auto-fill,minmax(200px,1fr)); }
      
  }

</style>
