{% if section.settings.logo %}
<div  class="logo{% unless section.settings.menu_align == 'logo_left' %} text-center{% endunless %}">
  <a href="{{ routes.root_url }}">
    {{ section.settings.logo | image_url: width: 500 | image_tag: loading: 'lazy', alt: shop.name }}
  </a> 
</div>
{% else %}
<a href="{{ routes.root_url }}">{{ shop.name }}</a>
{% endif %} 
{% schema %}
  {
    "name": "Giftcard Logo",
    "settings": [
{
"type": "image_picker",
"id": "logo",
"label": "Logo image" 
}, 
{
"type": "range",
"id": "logo_max_width",
"label":"Custom logo width", 
"min": 100,
"max": 400,
"step": 5,
"unit": "px",
"default": 100
}
]
  }
{% endschema %}

