<div class="{{ footer_column_alignment }}">
{% if block.settings.title != blank  and section.settings.show_footer_title %}             
  <h5 class="footer__title ">{{ block.settings.title }}</h5> 
  {% endif %}
  {% if block.settings.logo %}

  <a href="{{ routes.root_url }}">
    <img srcset="{%- if block.settings.logo.width >= 165 -%}{{ block.settings.logo | image_url: width: 165 }} 165w,{%- endif -%}
    {%- if block.settings.logo.width >= 360 -%}{{ block.settings.logo | image_url: width: 360 }} 360w,{%- endif -%}
    {%- if block.settings.logo.width >= 535 -%}{{ block.settings.logo | image_url: width: 535 }} 535w,{%- endif -%}
    {%- if block.settings.logo.width >= 750 -%}{{ block.settings.logo | image_url: width: 750 }} 750w,{%- endif -%}
    {%- if block.settings.logo.width >= 1070 -%}{{ block.settings.logo | image_url: width: 1070 }} 1070w,{%- endif -%}
    {%- if block.settings.logo.width >= 1500 -%}{{ block.settings.logo | image_url: width: 1500 }} 1500w,{%- endif -%}
    {{ block.settings.logo | image_url }} {{ block.settings.logo.width }}w" src="{{ block.settings.logo | image_url: width: 750 }}" sizes="(min-width: {{ settings.container_width }}px) {{ settings.container_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)" alt="" loading="lazy" width="{{ block.settings.logo.width }}" height="{{ block.settings.logo.height }}" style="max-height:{{ block.settings.footer_logo_height }}px">    
  </a>
  {% endif %}

  <p>{{ block.settings.text }}</p>

  {%- if block.settings.url != blank and block.settings.link_text != blank -%}
  <a href="{{ block.settings.url }}" class="dt-sc-btn">{{ block.settings.link_text }}</a>
  {%- endif -%}


  {% if section.settings.social_placement == 'with_logo'  and section.settings.show_social %}
  {% render 'social-links' %}
  {% endif %}
  {% if section.settings.show_payment_icons  and  section.settings.payment_placement == 'with_logo' %}
  {% unless shop.enabled_payment_types == empty %}
  <div class="footer__payment-icons grid__item wide--one-third post-large--one-third large--one-third medium--one-whole">
    <ul class="dt-sc-list-inline payment-icons">
      {% for type in shop.enabled_payment_types %}
      <li class="icon--payment">
        {{ type | payment_type_svg_tag }}
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endunless %}
  {% endif %}

</div>
